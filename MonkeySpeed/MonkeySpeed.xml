<!--

MonkeySpeed:
	A simple speedometer.
	
	Author: Trentin

-->

<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/ ..\..\FrameXML\UI.xsd">

	<Script file="localization.lua"/>
	<Script file="MonkeySpeedInit.lua"/>
	<Script file="MonkeySpeed.lua"/>
	<Script file="MonkeySpeedSlash.lua"/>

	<Frame name="MonkeySpeedFrame" frameStrata="HIGH" toplevel="true" enableMouse="true" movable="true" parent="UIParent">
		<Size>
			<AbsDimension x="96" y="24"/>
		</Size>
		<Anchors>
			<Anchor point="TOP">
				<Offset>
					<AbsDimension x="150" y="0"/>
				</Offset>
			</Anchor>
		</Anchors>
		<Backdrop bgFile="Interface\DialogFrame\UI-DialogBox-Background" edgeFile="Interface\Tooltips\UI-Tooltip-Border" tile="true">
			<BackgroundInsets>
				<AbsInset left="5" right="5" top="5" bottom="5"/>
			</BackgroundInsets>
			<TileSize>
				<AbsValue val="16"/>
			</TileSize>
			<EdgeSize>
				<AbsValue val="16"/>
			</EdgeSize>
		</Backdrop>
		<Frames>
			<Button name="MonkeySpeedTextButton">
				<Size>
					<AbsDimension x="86" y="13"/>
				</Size>
				<Anchors>
					<Anchor point="CENTER">
						<Offset>
							<AbsDimension x="0" y="0"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Layers>
					<Layer level="ARTWORK">
						<Texture name="MonkeySpeedBar" file="Interface\AddOns\MonkeyLibrary\Textures\bar.tga">
							<Size>
								<AbsDimension x="86" y="13"/>
							</Size>
							<Anchors>
								<Anchor point="CENTER">
								</Anchor>
							</Anchors>
						</Texture>
					</Layer>
					
					<Layer level="OVERLAY">
						<FontString name="MonkeySpeedText" inherits="MasterFont" font="Interface\AddOns\MonkeyLibrary\Fonts\myriapsc.ttf" >
							<Size>
								<AbsDimension x="86" y="13"/>
							</Size>
							<Anchors>
								<Anchor point="CENTER"/>
							</Anchors>
							<FontHeight>
								<AbsValue val="12"/>
							</FontHeight>
							<Color r="1.0" g="1.0" b="1.0"/>
						</FontString>
					</Layer>
				</Layers>
				<Scripts>
					<OnEnter>
						MonkeySpeed_OnEnter();
					</OnEnter>
					<OnLeave>
						GameTooltip:Hide();
					</OnLeave>
					<OnMouseDown>
						MonkeySpeed_OnMouseDown(arg1);
					</OnMouseDown>
					<OnMouseUp>
						MonkeySpeed_OnMouseUp(arg1);
					</OnMouseUp>
				</Scripts>
			</Button>
		</Frames>
		<Scripts>
			<OnLoad>
				MonkeySpeed_OnLoad();
			</OnLoad>
			<OnUpdate>
				MonkeySpeed_OnUpdate(arg1);
			</OnUpdate>
			<OnEvent>
				MonkeySpeed_OnEvent(event);
			</OnEvent>
			<OnMouseDown>
				MonkeySpeed_OnMouseDown(arg1);
			</OnMouseDown>
			<OnMouseUp>
				MonkeySpeed_OnMouseUp(arg1);
			</OnMouseUp>
		</Scripts>
	</Frame>
</Ui>
